% depending on the execution context.
% This is also the default value of the optional \meta{label} argument
% when not provided.
%
% Internally, \LaTeX\ manages a stack of names, starting with the
% reserved \enquote{|top-level|} name.
% The top element of this stack is the \META{current name}.
% Next commands interact with this stack.
%
% \begin{function}[added = 0001-01-01]{
%   \HookCurrentName,
%   \hook_current_name:,
% }
%   \begin{syntax}
% \LEFT{\cs{HookCurrentName}}^^A
%\RIGHT{\cs{hook_current_name:}}
%   \end{syntax}
%   Both \cs{HookCurrentName} and \cs{hook_current_name:}
%   expand to the \META{current name}.
%   This is mainly usefull for debugging and testing purposes.
% \end{function}
%
% \begin{function}[added = 0001-01-01]{
%   \PushHookCurrentName,
%   \PopHookCurrentName,
%   \hook_current_name_push:n,
%   \hook_current_name_pop:,
